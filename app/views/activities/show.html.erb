<% if @activity.can_read_by?(current_user) %>
  <div class="span7">
    <h1><%= @activity.title %></h1>
    <%= render "show" %>
    <%  if @activity.could_manage?(current_user) %>
      <%= render_field_with_dl '' do %>
        <%= render_cell :manage_activity,@activity.could_manage?(current_user),activity:@activity %>
      <% end -%>
    <% end -%>        

  </div>
  <div class="span4">
    <div id="bmap"  style="width:100%;height:200px">
    </div>
  </div>

  <script type="text/javascript" src="http://api.map.baidu.com/api?v=1.4"></script>
  <script type="text/javascript">
    show_init_map(<%= @activity.lat %>, <%= @activity.lng %>);
  </script>
<% elsif %>
  你没有受邀请，所以不能访问此活动！
<% end -%>
