<% @provinces = Province.scoped %>
<%= f.input :gender, :collection => [:true,:false], :include_blank => false %>
<%= f.input :birth,as: :date, :start_year => Date.today.year - 80,
  :end_year => Date.today.year - 12, :discard_day => true %>

<%= f.input :realname %>
<%= f.input :status %>
<%= f.association :now,collection: @provinces,as: :grouped_select, :group_method => :cities %>
<%= f.association :home,collection: @provinces,as: :grouped_select, :group_method => :cities %>
<%= f.input :work %>
<%= f.input :school %>
