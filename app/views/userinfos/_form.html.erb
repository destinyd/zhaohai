<% @provinces = Province.scoped %>
<%= f.input :gender, collection: Userinfo.get_gender_values, include_blank: false %>
<%= f.input :birth, as: :datepicker %>
<%= f.input :realname %>
<%= f.input :status %>
<%= f.input :now,collection: @provinces,as: :grouped_select, group_method: :cities,value_method: :name,placeholder: '选择您现在所在城市' %>
<%= f.input :home,collection: @provinces,as: :grouped_select, group_method: :cities,value_method: :name,placeholder: '选择您家乡所在城市' %>
<%= f.input :work %>
<%= f.input :school %>
<script>
    $(function() {
        $("input.datepicker").datepicker({
            changeYear: true,
            minDate: "-80Y", maxDate: "-15Y"
          });
        $('select.grouped_select').chosen(
            {
                no_results_text: "没有数据符合",
                placeholder_text: '选择城市'
            }
        );
    });
</script>
